<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
</head>
<body>
    <table>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
        <tr>
            <% users.forEach( user => {%>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                    <a href="/edit/<%= user.id %>">Editar</a>
                    <a href="/delete/<%= user.id %>">Eliminar</a>
                    
                </td>
        </tr>
       <% }); %>
    </table>
    <!--Agregar la lista-->
    

    <form action="/add" method="post">
        <label for="name">Nombre</label>
            <input type="text" name="name" id="name" maxlength="45" required placeholder="Ingresa tu nombre: ">
        <br><br>
        <label for="email">Correo: </label>
            <input type="email" name="email" id="email" maxlength="45" required placeholder="Ingresa tu correo: ">
        <br><br>
        <button type="submit">Registro</button>
    </form>
</body>
</html>